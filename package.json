{
  "name": "ygo-next",
  "version": "0.4.6",
  "description": "遊戯王NEXT - 遊戯王Neuron(公式カードデータベース)のデッキ管理を劇的に改善するChrome拡張機能",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "dev": "webpack --mode development --watch",
    "deploy": "bash scripts/deploy.sh",
    "build-and-deploy": "npm run build && npm run deploy",
    "type-check": "tsc --noEmit",
    "test": "npx tsx tests/unit/**/*.test.ts && npx tsx tests/combine/**/*.test.ts",
    "test:unit": "npx tsx tests/unit/**/*.test.ts",
    "test:combine": "npx tsx tests/combine/**/*.test.ts",
    "test:parser": "npx tsx tests/combine/parser/*.test.ts",
    "test:vitest": "vitest run",
    "test:vitest:ui": "vitest --ui",
    "test:components": "vitest run tests/unit/components",
    "setup:download-forms": "bash scripts/setup/download-search-forms.sh",
    "setup:extract-mappings": "npx tsx scripts/setup/extract-mappings.ts",
    "setup:generate-card-maps": "npx tsx scripts/setup/generate-card-maps.ts",
    "setup:all": "npm run setup:download-forms && npm run setup:extract-mappings && npm run setup:generate-card-maps"
  },
  "keywords": [
    "yugioh",
    "deck",
    "chrome-extension"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "^0.1.31",
    "@types/dotenv": "^6.1.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.19.1",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vue/compiler-sfc": "^3.5.25",
    "@vue/test-utils": "^2.4.6",
    "cheerio": "^1.1.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.3",
    "happy-dom": "^15.11.7",
    "html-webpack-plugin": "^5.6.5",
    "playwright": "^1.57.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9",
    "vue": "^3.5.24",
    "vue-loader": "^17.4.2",
    "webpack": "^5.103.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "axios": "^1.13.2",
    "canvas": "^3.2.0",
    "jsdom": "^27.2.0",
    "pinia": "^3.0.4",
    "qrcode": "^1.5.4",
    "sass": "^1.94.2",
    "sass-loader": "^16.0.6",
    "ws": "^8.18.3"
  }
}
