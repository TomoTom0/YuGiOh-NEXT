{
  "name": "ygo-next",
  "version": "0.5.6",
  "description": "遊戯王NEXT - 遊戯王Neuron(公式カードデータベース)のデッキ管理を劇的に改善するChrome拡張機能",
  "scripts": {
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "dev": "webpack --mode development --watch",
    "deploy": "bash scripts/deploy.sh",
    "build-and-deploy": "webpack --mode production && bash scripts/deploy.sh",
    "type-check": "tsc --noEmit",
    "test": "vitest run",
    "test:unit": "vitest run tests/unit",
    "test:combine": "vitest run tests/combine",
    "test:parser": "vitest run tests/combine/parser",
    "test:vitest": "vitest run",
    "test:vitest:ui": "vitest --ui",
    "test:components": "vitest run tests/unit/components",
    "setup:download-forms": "bash scripts/setup/download-search-forms.sh",
    "setup:extract-mappings": "bun scripts/setup/extract-mappings.ts",
    "setup:all": "bun run setup:download-forms && bun run setup:extract-mappings"
  },
  "keywords": [
    "yugioh",
    "deck",
    "chrome-extension"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/chrome": "^0.1.32",
    "@types/dotenv": "^6.1.1",
    "@types/jsdom": "^27.0.0",
    "@types/node": "^22.19.3",
    "@vitejs/plugin-vue": "^5.2.4",
    "@vitest/coverage-v8": "^2.1.9",
    "@vue/compiler-sfc": "^3.5.25",
    "@vue/test-utils": "^2.4.6",
    "cheerio": "^1.1.2",
    "copy-webpack-plugin": "^12.0.2",
    "css-loader": "^7.1.2",
    "dotenv": "^17.2.3",
    "happy-dom": "^15.11.7",
    "html-webpack-plugin": "^5.6.5",
    "playwright": "^1.57.0",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9",
    "vue": "^3.5.25",
    "vue-loader": "^17.4.2",
    "webpack": "^5.103.0",
    "webpack-cli": "^5.1.4"
  },
  "dependencies": {
    "@mdi/js": "^7.4.47",
    "axios": "^1.13.2",
    "canvas": "^3.2.0",
    "jsdom": "^27.3.0",
    "linkedom": "^0.18.12",
    "pinia": "^3.0.4",
    "qrcode": "^1.5.4",
    "sass": "^1.96.0",
    "sass-loader": "^16.0.6",
    "ws": "^8.18.3"
  }
}
